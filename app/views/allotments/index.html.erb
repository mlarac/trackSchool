<p id="notice"><%= notice %></p>

<h1>Listing Allotments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th>School</th>
      <th>Class mappings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @allotments.each do |allotment| %>
      <tr>
        <td><%= allotment.user_id %></td>
        <td><%= allotment.role %></td>
        <td><%= allotment.school_id %></td>
        <td><%= allotment.class_mappings_id %></td>
        <td><%= link_to 'Show', allotment %></td>
        <td><%= link_to 'Edit', edit_allotment_path(allotment) %></td>
        <td><%= link_to 'Destroy', allotment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

