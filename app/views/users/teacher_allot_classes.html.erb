<form action="/class_alloted">

  <div style="font-size:15; position:absolute; TOP:200px; LEFT:600px;">
    <div class="row">
      <div class="col s12">
        Teacher id :
        <input type = "text" value=<%= @id%> id="id" name="id" readonly>
      </div>
    </div>
  </div>

  <div style="font-size:15; position:absolute; TOP:300px; LEFT:600px;">
    <div class="row">
      <div class="col s12">
        Teacher id :
        <input type = "text" value=<%= User.find(@id).name%> id="id" name="id" readonly>
      </div>
    </div>
  </div>

  <div style="font-size:15; position:absolute; TOP:450px; LEFT:600px;">
    <div class="row">
      <div class="col s12">
        Class
        <select class="browser-default waves-effect waves-light btn" name="class" id="class_id">
          <% c_map = ClassMapping.all %>
          <% c_map.each do |c_map| %>
              <% std = Standard.find(c_map.standard_id) %>
              <% sec = Section.find(c_map.section_id) %>
              <option value=<%=c_map.id%> ><%=std.name%> <%= sec.name %> </option>
          <%end%>
        </select>
      </div>
    </div>
  </div>


  <div style="font-size:15; position:absolute; TOP:550px; LEFT:900px; ">
    <%= react_component('Submit') %>
  </div>

</form>
