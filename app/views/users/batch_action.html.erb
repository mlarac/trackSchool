

<form action="/save">
  <div style="font-size:15; position:absolute; TOP:200px; LEFT:600px;">
    <div class="row">
      <div class="col s12">
        Teacher Name:
        <input type = "text" value=<%= User.find(@id).email %>   readonly><br>
        Teacher ID:
        <input type = "text" value=<%=@id %> id="id" name="id" readonly>
      </div>
    </div>
  </div>

<div style="font-size:15; position:absolute; TOP:400px; LEFT:600px;">
  <div class="row">
    <div class="col s12">
      Class
      <select class="browser-default waves-effect waves-light btn" name="class" id="class_id">
        <% c_map = ClassMapping.all %>
        <% c_map.each do |c_map| %>
            <% std = Standard.find(c_map.standard_id) %>
            <% sec = Section.find(c_map.section_id) %>
            <option value=<%=c_map.id%> ><%=std.name%> <%= sec.name %> </option>
        <%end%>
      </select>
    </div>
  </div>
</div>

  <div style="font-size:15; position:absolute; TOP:550px; LEFT:800px;">
    <div class="row">
      <div class="col s12">
        <input type="submit">
      </div>
    </div>
  </div>

</form>
